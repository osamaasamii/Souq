@model souq.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">📦 Product Details</h2>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price?.ToString("C")</dd>

                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <i class="../assets/img/Product/@Model.Image" style="font-size: 2rem;"></i>
                    }
                    else
                    {
                        <span class="text-muted">No Image</span>
                    }
                </dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.Date?.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category?.Name</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
