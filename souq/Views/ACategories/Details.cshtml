@model souq.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-4">
    <h1 class="mb-4">Category Details</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-3">Category Info</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 fw-semibold">Image</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <i class="@Model.Image" style="font-size: 3rem;"></i>
                    }
                    else
                    {
                        <span class="text-muted">No Image</span>
                    }
                </dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
