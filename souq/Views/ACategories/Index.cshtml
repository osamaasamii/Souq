@model IEnumerable<souq.Models.Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">📂 Categories</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <table class="table table-hover table-bordered align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.First().Image)</th>
                <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                <th style="width: 240px;">Actions</th> <!-- وسعت العمود علشان يكفي الزرار الجديد -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Image))
                        {
                            <i class="@item.Image" style="font-size: 2rem;"></i>
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1" title="Edit Category">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1" title="Category Details">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger me-1" title="Delete Category">
                            <i class="bi bi-trash"></i>
                        </a>
                        <a asp-controller="AProducts" asp-action="Create" asp-route-categoryId="@item.Id" class="btn btn-sm btn-success" title="Add New Product">
                            <i class="bi bi-plus-circle"></i> 
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
